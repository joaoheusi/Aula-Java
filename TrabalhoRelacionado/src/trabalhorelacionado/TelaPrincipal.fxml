<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="Calculadora" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="trabalhorelacionado.TelaPrincipalController">
    <HBox fx:id="boxNum1"> 
        <Label text="Altura: " />
        <TextField fx:id="f1" />
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </VBox.margin>
    </HBox>
    <HBox fx:id="boxNum2"> 
        <Label text="Largura: " />
        <TextField fx:id="f2" />
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </VBox.margin>
    </HBox>  
    <HBox fx:id="boxNum3"> 
        <Label text="Profundidade: " />
        <TextField fx:id="f3" />
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </VBox.margin>
    </HBox>   
    <HBox> 
        <Label fx:id="labl1" text="Resultado:" />
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </VBox.margin>
    </HBox>
    <HBox fx:id="boxBotoes">
        <Button onAction="#ativarPL" text="P. Long">
        </Button>
        <Button onAction="#ativarPT" text="P. Trans">
        </Button>
        <Button onAction="#ativarAL" text="A. Long">
        </Button>
        <Button onAction="#ativarAT" text="A. Trans">
        </Button>
        <Button onAction="#ativarV" text="Volume">   
        </Button>
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </VBox.margin>
    </HBox>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
        
</VBox>
